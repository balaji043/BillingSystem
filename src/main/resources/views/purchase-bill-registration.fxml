<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.*?>
<?import java.lang.*?>
<StackPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="720.0" prefWidth="1440.0"
           xmlns="http://javafx.com/javafx/8.0.171" fx:controller="bam.billing.se.controllers.PurchaseBillRegistration">
    <BorderPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="-Infinity"
                minWidth="-Infinity">
        <top>
            <HBox alignment="CENTER" prefWidth="200.0" spacing="20.0" BorderPane.alignment="CENTER">
                <JFXComboBox fx:id="typeComboBox" prefWidth="200.0" promptText="SELECT TYPE"/>
                <JFXButton fx:id="addBTN" onAction="#handleAddBill" styleClass="jfx-button2" textFill="WHITE"/>
                <JFXButton fx:id="deleteBTN" onAction="#handleDeleteBill" styleClass="jfx-button2" textFill="WHITE"/>
                <JFXButton layoutX="740.0" layoutY="30.0" minHeight="40.0" onAction="#handleBack" prefWidth="200.0"
                           styleClass="jfx-button1" text="Back" textFill="WHITE"/>
                <padding>
                    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
                </padding>
            </HBox>
        </top>
        <center>
            <JFXListView fx:id="listView" BorderPane.alignment="CENTER">
                <padding>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                </padding>
                <styleClass>
                    <String fx:value="decrement-arrow"/>
                    <String fx:value="decrement-button"/>
                    <String fx:value="increment-arrow"/>
                    <String fx:value="increment-button"/>
                    <String fx:value="pretty-list-view"/>
                    <String fx:value="pretty-scroll-bar"/>
                    <String fx:value="scroll-bar"/>
                    <String fx:value="thumb"/>
                    <String fx:value="virtual-flow"/>
                </styleClass>
            </JFXListView>
        </center>
        <bottom>
            <StackPane>
                <HBox alignment="CENTER" spacing="20.0">
                    <JFXButton onAction="#handleCalculate" prefHeight="40.0" prefWidth="200.0"
                               styleClass="jfx-button1" text="Calculate" textFill="WHITE"/>
                    <JFXButton fx:id="submitBTN" onAction="#handleSubmit" prefHeight="40.0" prefWidth="200.0"
                               styleClass="jfx-button1" text="Submit" textFill="WHITE"/>
                </HBox>
                <BorderPane.margin>
                    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
                </BorderPane.margin>
            </StackPane>
        </bottom>
    </BorderPane>
</StackPane>
