<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.*?>
<VBox xmlns:fx="http://javafx.com/fxml/1" alignment="CENTER" maxWidth="500.0" minWidth="500.0" prefWidth="500.0"
      xmlns="http://javafx.com/javafx/8.0.171" fx:controller="bam.billing.se.controllers.SettingsController">
    <ScrollPane maxHeight="500.0" maxWidth="500.0" minHeight="500.0" minWidth="500.0" prefHeight="500.0"
                prefWidth="500.0">
        <VBox alignment="CENTER_LEFT" maxHeight="720.0" maxWidth="470.0" minWidth="470.0" prefWidth="470.0"
              spacing="25.0">
            <JFXTextField fx:id="storeNameTF" labelFloat="true" promptText="Store Name"/>
            <JFXTextField fx:id="addressLineOneTF" labelFloat="true" promptText="Address Line1"/>
            <JFXTextField fx:id="addressLineTwoTF" labelFloat="true" promptText="Address Line 2"/>
            <JFXTextField fx:id="gstNumberTF" labelFloat="true" promptText="GTIN NO"/>
            <JFXTextField fx:id="bankNameTF" labelFloat="true" promptText="Bank Name"/>
            <JFXTextField fx:id="branchNameTF" labelFloat="true" promptText="Branch Name"/>
            <JFXTextField fx:id="bankAccountNoTF" labelFloat="true" promptText="Account No"/>
            <JFXTextField fx:id="ifscCodeTF" labelFloat="true" promptText="IFSC CODE"/>
            <JFXTextField fx:id="phoneNumberTF" promptText="Phone"/>
            <JFXTextField fx:id="billInvoiceCodePrefixTF" promptText="Invoice Prefix. Ex: J"/>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
                <JFXComboBox fx:id="descriptionStringJFXComboBox" editable="true" maxWidth="180.0" minWidth="180.0"
                             prefWidth="180.0"
                             promptText="Descriptions"/>
                <JFXButton onAction="#handleDAdd" styleClass="jfx-button1" text="ADD"/>
                <JFXButton onAction="#handleDDelete" styleClass="jfx-button1" text="Delete"/>
                <JFXButton onAction="#handleDSubmit" styleClass="jfx-button1" text="Submit"/>
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
                <JFXComboBox fx:id="perDataStringJFXComboBox" editable="true" maxWidth="180.0" minWidth="180.0"
                             prefWidth="180.0"
                             promptText="PER DATA"/>
                <JFXButton onAction="#handlePAdd" styleClass="jfx-button1" text="ADD"/>
                <JFXButton onAction="#handlePDelete" styleClass="jfx-button1" text="Delete"/>
                <JFXButton onAction="#handlePSubmit" styleClass="jfx-button1" text="Submit"/>
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
                <JFXComboBox fx:id="hsnDataStringJFXComboBox" editable="true" maxWidth="180.0" minWidth="180.0"
                             prefWidth="180.0"
                             promptText="HSN Code"/>
                <JFXButton onAction="#handleHAdd" styleClass="jfx-button1" text="ADD"/>
                <JFXButton onAction="#handleHDelete" styleClass="jfx-button1" text="Delete"/>
                <JFXButton onAction="#handleHSubmit" styleClass="jfx-button1" text="Submit"/>
            </HBox>
            <JFXTextField fx:id="productMaxLimitPerBillTF" promptText="Limit"/>
            <JFXComboBox fx:id="cssThemeStringJFXComboBox" prefWidth="430.0" promptText="Theme"/>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
            </padding>
        </VBox>
    </ScrollPane>
</VBox>
