<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import java.lang.*?>
<StackPane prefHeight="720.0" prefWidth="1440.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.UI.Billing.BillingController">
    <BorderPane fx:id="root" prefHeight="200.0" prefWidth="200.0">
        <top>
            <HBox alignment="CENTER" prefHeight="100.0" spacing="50.0" BorderPane.alignment="CENTER">
                <JFXCheckBox fx:id="checkBoxGST" prefHeight="40.0" prefWidth="200.0" text="GST Customer" />
                <Label text="Bill For" />
                <JFXComboBox fx:id="comboBoxCustomer" editable="true" prefHeight="40.0" prefWidth="200.0" promptText="Customer" />
            <JFXCheckBox fx:id="checkIGST" text="I-GST Bill" />
                <JFXButton buttonType="RAISED" onAction="#handleCustomerSubmit" prefHeight="40.0" prefWidth="200.0" styleClass="jfx-button1" text="Submit" textFill="WHITE" />
            </HBox>
        </top>
        <center>
          <BorderPane fx:id="borderPane" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
              <center>
                  <JFXListView fx:id="listView" BorderPane.alignment="CENTER">
                      <padding>
                          <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                      </padding>
                      <styleClass>
                          <String fx:value="decrement-arrow" />
                          <String fx:value="decrement-button" />
                          <String fx:value="increment-arrow" />
                          <String fx:value="increment-button" />
                          <String fx:value="pretty-list-view" />
                          <String fx:value="pretty-scroll-bar" />
                          <String fx:value="scroll-bar" />
                          <String fx:value="thumb" />
                          <String fx:value="virtual-flow" />
                      </styleClass>
                  </JFXListView>
              </center>
              <top>
                  <GridPane maxHeight="100.0" minHeight="100.0" minWidth="50.0" prefHeight="100.0" prefWidth="50.0">
                      <columnConstraints>
                          <ColumnConstraints hgrow="SOMETIMES" maxWidth="200.0" minWidth="200.0" prefWidth="200.0"/>
                          <ColumnConstraints hgrow="SOMETIMES" maxWidth="300.0" minWidth="300.0" prefWidth="300.0"/>
                          <ColumnConstraints hgrow="SOMETIMES" maxWidth="300.0" minWidth="300.0" prefWidth="300.0"/>
                          <ColumnConstraints hgrow="SOMETIMES" maxWidth="350.0" minWidth="350.0" prefWidth="350.0"/>
                          <ColumnConstraints hgrow="SOMETIMES" maxWidth="300.0" minWidth="300.0" prefWidth="300.0"/>
                      </columnConstraints>
                      <rowConstraints>
                          <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                      </rowConstraints>
                      <StackPane alignment="CENTER_LEFT">
                          <HBox alignment="CENTER_LEFT" spacing="5.0">
                              <StackPane.margin>
                                  <Insets left="2.0"/>
                              </StackPane.margin>
                              <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Bill For : "/>
                              <Text fx:id="labelBillFor" text="Captain Marvel">
                                  <font>
                                      <Font name="System Bold" size="20.0"/>
                                  </font>
                              </Text>
                          </HBox>
                      </StackPane>
                      <StackPane alignment="CENTER_RIGHT" GridPane.columnIndex="1">
                          <JFXButton buttonType="RAISED" onAction="#handleAdd" prefHeight="40.0" prefWidth="200.0" styleClass="jfx-button1" text="ADD ITEM" textFill="WHITE">
                              <StackPane.margin>
                                  <Insets right="10.0" />
                              </StackPane.margin>
                          </JFXButton>
                      </StackPane>
                      <StackPane alignment="CENTER_LEFT" GridPane.columnIndex="2">
                          <JFXButton buttonType="RAISED" onAction="#handleDelete" prefHeight="40.0" prefWidth="200.0" styleClass="jfx-button1" text="DELETE ITEM" textFill="WHITE">
                              <StackPane.margin>
                                  <Insets left="10.0" />
                              </StackPane.margin>
                          </JFXButton>
                      </StackPane>
                      <StackPane alignment="CENTER_LEFT" GridPane.columnIndex="3">
                          <Text fx:id="totalAmount" strokeType="OUTSIDE" strokeWidth="0.0" text="Total Amount :">
                              <font>
                                  <Font name="System Bold" size="20.0" />
                              </font>
                          </Text>
                      </StackPane>
                      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="20.0" GridPane.columnIndex="4">
                          <JFXCheckBox fx:id="isManual" text="Manual Invoice">
                        <VBox.margin>
                           <Insets top="20.0" />
                        </VBox.margin></JFXCheckBox>
                          <JFXDatePicker fx:id="manualDate" editable="false" promptText="Invoice Date" />
                      </VBox>
                  </GridPane>
              </top>
              <bottom>
                  <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="20.0" BorderPane.alignment="CENTER">
                      <JFXButton buttonType="RAISED" onAction="#handleCalculate" prefHeight="40.0" prefWidth="200.0" styleClass="jfx-button1" text="Calculate" textFill="WHITE" />
                  <JFXButton buttonType="RAISED" onAction="#handleBillSubmit" prefHeight="40.0" prefWidth="200.0" styleClass="jfx-button1" text="Submit" textFill="WHITE" />
                  </HBox>
              </bottom>
          </BorderPane>
        </center>
    </BorderPane>
</StackPane>
